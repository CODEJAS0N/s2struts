<?xml version="1.0" encoding="ISO-8859-1" ?>

<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.2//EN"
          "http://jakarta.apache.org/struts/dtds/struts-config_1_2.dtd">

<struts-config>

<!-- ======================================== Form Bean Definitions -->

    <form-beans>
		<form-bean
			name="addForm"
			type="examples.hotdeploy.web.AddForm"/>
    </form-beans>

<!-- ================================= Global Exception Definitions -->

    <global-exceptions>
    </global-exceptions>

<!-- =================================== Global Forward Definitions -->

    <global-forwards>

        <forward
            name="welcome"
            path="/index.html"/>

        <forward
            name="globalStyle"
            path="/css/global.css"/>

        <forward
            name="executeJs"
            path="/js/execute.js"/>

        <forward
            name="error"
            path="/pages/error.html"/>

    </global-forwards>

<!-- =================================== Action Mapping Definitions -->

    <action-mappings>
        <action
            path="/add"
            type="examples.hotdeploy.web.AddAction"
            name="addForm"
            scope="request"
            validate="false"
            input="/pages/addInput.html">
            <forward name="success" path="/pages/addResult.html" />
        </action>
    </action-mappings>
    

<!-- ===================================== Controller Configuration -->

    <controller
       processorClass="org.seasar.struts.processor.S2RequestProcessor"/>
<!--
	<controller
       processorClass="org.apache.struts.action.RequestProcessor"/>
-->

<!-- ================================ Message Resources Definitions -->

    <message-resources parameter="application"/>

<!-- ======================================= Plug Ins Configuration -->

    <plug-in className="org.apache.struts.validator.ValidatorPlugIn">
        <set-property
          property="pathnames"
          value="/WEB-INF/validator-rules.xml,/WEB-INF/validation.xml"/>
    </plug-in>
    
    <!--
    <plug-in className="org.seasar.struts.zeroconfig.plugin.AutoStrutsConfigRegisterPlugIn">
        <set-property property="enableJar" value="false"/>
        <set-property property="docRoot" value="/pages"/>
    </plug-in>
    -->
    <plug-in className="org.seasar.struts.zeroconfig.plugin.DeployStrutsConfigRegisterPlugIn">
	    <set-property property="rootPackageName"             value="examples.hotdeploy"/>
	    <set-property property="enableJar"                   value="false"/>
	    <set-property property="actionMiddlePackageName"     value="webpojo"/>
	    <set-property property="actionSuffix"                value="Action"/>
	    <set-property property="actionFormMiddlePackageName" value="webpojo"/>
	    <set-property property="actionFormSuffix"            value="Form"/>
	    <set-property property="docRoot"                     value="/pages"/>
	    <set-property property="viewExtension"               value="jsp,html"/>
    </plug-in>
    <plug-in className="org.seasar.struts.hotdeploy.plugin.HotdeployPlugIn"/>

</struts-config>
