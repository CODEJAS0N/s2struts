<?xml version="1.0" encoding="UTF-8"?>
<project>
  <pomVersion>3</pomVersion>
  <artifactId>s2-struts</artifactId>
  <name>s2-struts</name>
  <groupId>seasar</groupId>
  <currentVersion>${version}</currentVersion>
  <organization>
    <name>The Seasar Project</name>
    <url>http://seasar.sourceforge.jp/</url>
  </organization>
  <inceptionYear>2004</inceptionYear>
  <repository />
  <mailingLists>
    <mailingList>
      <name>${pom.name} User List</name>
      <subscribe>http://lists.sourceforge.jp/mailman/listinfo/seasar-user</subscribe>
      <unsubscribe>http://lists.sourceforge.jp/mailman/listinfo/seasar-user</unsubscribe>
      <archive>http://lists.sourceforge.jp/mailman/listinfo/seasar-user</archive>
    </mailingList>
  </mailingLists>
  <licenses>
    <license>
      <name>The Seasar Software License, Version 1.1</name>
      <url>http://www.seasar.org/SEASAR-LICENSE.TXT</url>
    </license>
  </licenses>
  <dependencies>
    <dependency>
      <groupId>aopalliance</groupId>
      <artifactId>aopalliance</artifactId>
      <version>${version.aopalliance}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>${version.junit}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>ognl</groupId>
      <artifactId>ognl</artifactId>
      <version>${version.ognl}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>javassist</groupId>
      <artifactId>javassist</artifactId>
      <version>${version.javassist}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>log4j</groupId>
      <artifactId>log4j</artifactId>
      <version>${version.log4j}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>servletapi</groupId>
      <artifactId>servletapi</artifactId>
      <version>${version.servletapi}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>jspapi</groupId>
      <artifactId>jsp-api</artifactId>
      <version>${version.jspapi}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-logging</groupId>
      <artifactId>commons-logging</artifactId>
      <version>${version.commons.logging}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-beanutils</groupId>
      <artifactId>commons-beanutils</artifactId>
      <version>${version.commons.beanutils}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>commons-digester</groupId>
      <artifactId>commons-digester</artifactId>
      <version>${version.commons.digester}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>struts</groupId>
      <artifactId>struts</artifactId>
      <version>${version.struts}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>seasar</groupId>
      <artifactId>s2-framework</artifactId>
      <version>${version.s2.framework}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>seasar</groupId>
      <artifactId>s2-extension</artifactId>
      <version>${version.s2.extension}</version>
      <type>jar</type>
    </dependency>
    <dependency>
      <groupId>seasar</groupId>
      <artifactId>s2-struts-unit</artifactId>
      <version>${version.s2.struts.unit}</version>
      <type>jar</type>
    </dependency>
  </dependencies>
  <build>
    <sourceDirectory>${src.main}</sourceDirectory>
    <unitTestSourceDirectory>${src.testcase}</unitTestSourceDirectory>
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
        <resource>
          <directory>${src.testcase}</directory>
          <includes>
            <include>**/*.properties</include>
            <include>**/*.dicon</include>
            <include>**/*.xml</include>
            <include>**/*.dtd</include>
          </includes>
          <filtering>false</filtering>
        </resource>
      </resources>
    </unitTest>
    <resources>
      <resource>
        <directory>${src.main}</directory>
        <includes>
          <include>**/*.properties</include>
          <include>**/*.dicon</include>
          <include>**/*.xml</include>
          <include>**/*.dtd</include>
        </includes>
        <filtering>false</filtering>
      </resource>
    </resources>
  </build>
  <reports>
    <report>maven-junit-report-plugin</report>
  </reports>
  <properties />
</project>

